<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="170dp"
        android:layout_height="91dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/images" />

    <ImageView
        android:id="@+id/image_help"
        android:layout_width="170dp"
        android:layout_height="91dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profile"
        app:srcCompat="@drawable/images" />

    <ImageView
        android:id="@+id/image_genre"
        android:layout_width="170dp"
        android:layout_height="91dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_bookmark"
        app:srcCompat="@drawable/images" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textColor="@color/color_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_help"
        app:layout_constraintEnd_toEndOf="@+id/image_help"
        app:layout_constraintStart_toStartOf="@+id/image_help"
        app:layout_constraintTop_toTopOf="@+id/image_help" />

    <Button
        android:id="@+id/button_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/image_genre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_bookmark" />

    <ImageView
        android:id="@+id/image_main_header"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_main_header"
        app:srcCompat="@drawable/lie" />

    <ImageView
        android:id="@+id/image_bookmark"
        android:layout_width="170dp"
        android:layout_height="91dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintEnd_toStartOf="@+id/image_profile"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/images" />

    <TextView
        android:id="@+id/text_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bookmark"
        android:textSize="20sp"
        android:textColor="@color/color_dark"
        app:layout_constraintBottom_toBottomOf="@+id/image_bookmark"
        app:layout_constraintEnd_toEndOf="@+id/image_bookmark"
        app:layout_constraintStart_toStartOf="@+id/image_bookmark"
        app:layout_constraintTop_toTopOf="@+id/image_bookmark" />

    <TextView
        android:id="@+id/text_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:textColor="@color/color_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_genre"
        app:layout_constraintEnd_toEndOf="@+id/image_genre"
        app:layout_constraintStart_toStartOf="@+id/image_genre"
        app:layout_constraintTop_toTopOf="@+id/image_genre"/>

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profile"
        android:textSize="20sp"
        android:textColor="@color/color_dark"
        app:layout_constraintBottom_toBottomOf="@+id/image_profile"
        app:layout_constraintEnd_toEndOf="@+id/image_profile"
        app:layout_constraintStart_toStartOf="@+id/image_profile"
        app:layout_constraintTop_toTopOf="@+id/image_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>